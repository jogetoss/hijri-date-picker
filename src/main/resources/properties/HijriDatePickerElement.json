[
   {
      "title":"@@org.joget.datepicker.hijri.element.editElement@@",
      "properties":[
         {
            "name":"id",
            "label":"@@org.joget.datepicker.hijri.element.id@@",
            "type":"textfield",
            "required":"True",
            "regex_validation":"^[a-zA-Z0-9_]+$",
            "validation_message":"@@org.joget.datepicker.hijri.element.invalidId@@"
         },
         {
            "name":"label",
            "label":"@@org.joget.datepicker.hijri.element.label@@",
            "type":"textfield",
            "required":"True",
            "value":"@@org.joget.apps.form.lib.TextField.pluginLabel@@"
         }
      ]
   },
   {
      "title":"@@org.joget.datepicker.hijri.element.advancedOptions@@",
      "properties":[
         {
            "label":"@@org.joget.datepicker.hijri.element.validation@@",
            "type":"header"
         },
         {
            "name":"validator",
            "label":"@@form.datepicker.validator@@",
            "type":"elementselect",
            "options_ajax":"[CONTEXT_PATH]/web/property/json/getElements?classname=org.joget.apps.form.model.FormValidator",
            "url":"[CONTEXT_PATH]/web/property/json[APP_PATH]/getPropertyOptions"
         },
         {
            "name":"currentDateAs",
            "label":"@@org.joget.datepicker.hijri.element.setCurrentDateAs@@",
            "type":"selectbox",
            "options":[
               {
                  "value":"",
                  "label":""
               },
               {
                  "value":"minDate",
                  "label":"@@org.joget.datepicker.hijri.element.setCurrentDateAs.min@@"
               },
               {
                  "value":"maxDate",
                  "label":"@@org.joget.datepicker.hijri.element.setCurrentDateAs.max@@"
               }
            ]
         },
         {
            "name":"minMaxFieldId",
            "label":"@@org.joget.datepicker.hijri.element.minMaxFieldId@@",
            "type":"selectbox",
            "required":"True",
            "control_field":"currentDateAs",
            "control_value":".*Date$",
            "control_use_regex":"true",
            "options_callback":"FormBuilder.getFieldOptions"
         },
         {
            "label":"@@org.joget.datepicker.hijri.element.ui@@",
            "type":"header"
         },
         {
            "name":"placeholder",
            "label":"@@org.joget.datepicker.hijri.element.placeholder@@",
            "type":"textfield"
         },
         {
            "name":"format",
            "label":"@@org.joget.datepicker.hijri.element.displayFormat@@",
            "type":"textfield",
            "description":"@@org.joget.datepicker.hijri.element.displayFormatEg@@",
            "control_field":"datePickerType",
            "control_value":"^$|dateTime",
            "control_use_regex":"true"
         },
         {
            "name":"readonly",
            "label":"@@org.joget.datepicker.hijri.element.readonly@@",
            "type":"checkbox",
            "value":"False",
            "options":[
               {
                  "value":"true",
                  "label":""
               }
            ]
         },
         {
            "name":"readonlyLabel",
            "label":"@@org.joget.datepicker.hijri.element.labelReadOnly@@",
            "type":"checkbox",
            "value":"False",
            "options":[
               {
                  "value":"true",
                  "label":""
               }
            ]
         },
         {
            "label":"@@org.joget.datepicker.hijri.element.workflow@@",
            "type":"header"
         },
         {
            "name":"workflowVariable",
            "label":"@@org.joget.datepicker.hijri.element.workflowVariable@@",
            "type":"autocomplete",
            "options_ajax":"[CONTEXT_PATH]/web/json/console/app[APP_PATH]/workflowVariable/options"
         }
      ]
   }
]
